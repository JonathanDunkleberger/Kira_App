# ---------- Authentication (Clerk) ----------
# Get these from your Clerk Dashboard -> API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
CLERK_WEBHOOK_SECRET=

# ---------- Database (Supabase + Prisma) ----------
# Get these from your Supabase Dashboard -> Project Settings -> Database -> Connection String
# For your LIVE app (Vercel & Render). Use the "Session Pooler" string.
DATABASE_URL=
# For running migrations. Use the "Direct Connection" string.
DIRECT_URL=

# ---------- AI Services ----------
# Speech-to-Text (Deepgram)
DEEPGRAM_API_KEY=
# Language Model (OpenAI)
OPENAI_API_KEY=
# Text-to-Speech (Azure)
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=

# ---------- Monetization (Stripe) ----------
# Get these from your Stripe Dashboard
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
# The Price ID for your pro subscription plan
STRIPE_PRICE_ID=

# ---------- Application Settings ----------
# The public URL of your Vercel frontend
NEXT_PUBLIC_APP_URL=https://kira-ai-2.vercel.app
# The public URL of your Render backend server
NEXT_PUBLIC_WEBSOCKET_URL=wss://kira-socket-server.onrender.com
# Usage limits in seconds
FREE_TRIAL_SECONDS=900
PRO_SESSION_SECONDS=7200