{
  "$schema": "https://unpkg.com/knip/schema.json",
  "entry": [
    "next.config.{js,cjs,mjs}",
    "app/**/*.{ts,tsx}",
    "components/**/*.{ts,tsx}",
    "lib/**/*.{ts,tsx}",
    "middleware.ts",
    "scripts/**/*.{js,mjs,ts}",
    "playwright.config.ts",
    "vitest.config.ts"
  ],
  "project": [
    "app/**/*.{ts,tsx}",
    "components/**/*.{ts,tsx}",
    "lib/**/*.{ts,tsx}",
    "scripts/**/*.{js,mjs,ts}",
    "tests/**/*.{ts,tsx}",
    "test/**/*.{ts,tsx}",
    "public/**/*.{js}"
  ],
  "ignore": [
    "artifacts/**",
    ".next/**",
    "dist/**",
    "build/**",
    "tests-examples/**",
    "public/microphoneWorklet.js"
  ],
  "ignoreDependencies": ["postcss", "autoprefixer", "dependency-cruiser", "tsconfig-paths"],
  "rules": { "classMembers": "off" }
}
