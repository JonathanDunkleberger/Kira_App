{
  "name": "kira-ai-monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --stream dev",
    "build": "dotenv -e ./.env -- pnpm --filter web... build",
    "db:migrate": "dotenv -e ./.env -- pnpm prisma migrate dev",
    "db:reset": "dotenv -e ./.env -- pnpm prisma db push --force-reset",
    "db:generate": "pnpm --filter web prisma generate",
    "lint": "pnpm --filter \"./packages/**\" lint",
    "typecheck": "pnpm --filter \"./packages/**\" typecheck"
  },
  "packageManager": "pnpm@9.12.1",
  "devDependencies": {
    "dotenv-cli": "^7.4.2",
    "prisma": "^5.17.0"
  },
  "dependencies": {
    "@clerk/clerk-sdk-node": "^5.1.6",
    "@prisma/client": "^5.17.0"
  }
}
