{
  "name": "ai-media-companion",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=20.10 <21",
    "npm": ">=9"
  },
  "scripts": {
    "dev:next": "next dev -p 3000",
    "dev:server": "tsx socket-server.ts",
    "dev": "npm-run-all --parallel dev:next dev:server",
    "build": "node scripts/check-env.cjs && next build",
    "build:server": "tsc -p tsconfig.server.json && tsc-alias -p tsconfig.server.json --verbose --resolve-full-paths --resolve-full-extension .js",
    "start": "node --loader tsconfig-paths/register dist/socket-server.js",
    "start:server": "node dist/socket-server.js",
    "lint": "eslint .",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "deadcode": "knip --no-exit-code && ts-prune",
    "deps:unused": "depcheck --ignores=autoprefixer,postcss,dependency-cruiser,tsconfig-paths",
    "cycles": "madge app lib components --circular",
    "graph": "depcruise app lib components --output-type dot | dot -Tsvg -o artifacts/deps.svg",
    "verify": "npm run format && npm run lint && npm run typecheck && npm run deadcode && npm run deps:unused && npm run cycles && npm run test",
    "review:packet": "zx scripts/generate-review-packet.mjs",
    "test": "vitest run",
    "test:ui": "vitest",
    "e2e": "playwright test",
    "flags:check": "node scripts/check-flag-expiry.mjs",
  "postinstall": "node scripts/postinstall.cjs || true",
    "db:types": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID --schema public > types/supabase.ts",
    "db:migrate:new": "supabase migration new",
    "db:migrate:push": "supabase db push",
    "db:migrate:status": "supabase migration list"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-icons": "^1.3.2",
    "@ricky0123/vad-web": "0.0.27",
    "@stripe/react-stripe-js": "2.8.0",
    "@stripe/stripe-js": "3.4.1",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.57.2",
    "ffmpeg-static": "^5.2.0",
    "framer-motion": "^11.18.2",
    "lucide-react": "^0.473.0",
    "next": "^15.5.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "satori": "^0.18.1",
    "sharp": "^0.34.3",
    "stripe": "16.10.0",
    "tsconfig-paths": "^4.2.0",
    "ws": "^8.18.3",
    "zod": "^4.0.0",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/node": "^24.3.0",
    "@types/react": "19.1.12",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "autoprefixer": "^10.4.18",
    "depcheck": "^1.4.6",
    "dependency-cruiser": "^16.6.0",
    "dotenv": "^17.2.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.5.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jsdom": "^25.0.1",
    "knip": "^5.27.2",
    "lefthook": "^1.10.10",
    "madge": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "prettier": "^3.3.3",
    "supabase": "^2.39.2",
    "tailwindcss": "^3.4.9",
    "ts-prune": "^0.10.3",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2",
    "vitest": "^2.1.1",
    "zx": "^8.8.1"
  },
  "overrides": {}
}
