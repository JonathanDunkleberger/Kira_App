{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["es2022", "dom"],
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": ["node"]
  },
  "include": [
    "socket-server.mts",
    "google-stt-streamer.ts",
    "lib/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
