{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "baseUrl": ".",
  "paths": { "@/*": ["./*.ts", "./*"] },
  "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
  "strict": false,
  "plugins": []
  },
  "include": ["socket-server.ts", "lib/server/**/*.ts"],
  "exclude": [".next", "node_modules", "dist"]
}
